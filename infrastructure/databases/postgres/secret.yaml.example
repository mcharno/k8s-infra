# PostgreSQL Passwords Secret
#
# DO NOT COMMIT ACTUAL PASSWORDS TO GIT!
# This is an example file showing the structure.
#
# To create the actual secret, use one of these methods:
#
# Method 1: Generate and create directly
# ./scripts/databases/create-postgres-secret.sh
#
# Method 2: Manual creation
# kubectl create secret generic postgres-passwords \
#   --from-literal=admin-password=$(openssl rand -base64 32 | tr -d "=+/" | cut -c1-25) \
#   --from-literal=nextcloud-password=$(openssl rand -base64 32 | tr -d "=+/" | cut -c1-25) \
#   --from-literal=tandoor-password=$(openssl rand -base64 32 | tr -d "=+/" | cut -c1-25) \
#   --from-literal=wallabag-password=$(openssl rand -base64 32 | tr -d "=+/" | cut -c1-25) \
#   -n database
#
# Method 3: Use Sealed Secrets (GitOps-friendly)
# kubeseal --format=yaml < secret.yaml > sealed-secret.yaml

apiVersion: v1
kind: Secret
metadata:
  name: postgres-passwords
  namespace: database
type: Opaque
stringData:
  admin-password: "CHANGE_ME_ADMIN"
  nextcloud-password: "CHANGE_ME_NEXTCLOUD"
  tandoor-password: "CHANGE_ME_TANDOOR"
  wallabag-password: "CHANGE_ME_WALLABAG"
